<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="322.0" prefWidth="482.0" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <Label style="-fx-font-size: 18px;" text="Edit Profile" />
       
       <HBox spacing="5">
          <children>
              <Label text="First Name:" textAlignment="CENTER">
               <HBox.margin>
                  <Insets left="60.0" />
               </HBox.margin>
            </Label>
              <TextField fx:id="firstNameField" promptText="First Name">
               <HBox.margin>
                  <Insets left="60.0" />
               </HBox.margin>
            </TextField>
          </children>
       </HBox>
       
       <HBox spacing="5">
          <children>
              <Label text="Last Name:">
               <HBox.margin>
                  <Insets left="60.0" />
               </HBox.margin>
            </Label>
              <TextField fx:id="lastNameField" promptText="Last Name">
               <HBox.margin>
                  <Insets left="60.0" />
               </HBox.margin>
            </TextField>
          </children>
       </HBox>
       
       <HBox spacing="5">
          <children>
              <Label text="Password:">
               <HBox.margin>
                  <Insets left="60.0" />
               </HBox.margin>
            </Label>
              <PasswordField fx:id="passwordField" promptText="New Password">
               <HBox.margin>
                  <Insets left="68.0" />
               </HBox.margin>
            </PasswordField>
          </children>
       </HBox>
       
       <HBox spacing="10">
          <children>
              <Button fx:id="savechange" text="Save Changes">
               <HBox.margin>
                  <Insets left="110.0" />
               </HBox.margin>
            </Button>
              <Button fx:id="cancel" onAction="#handleCancel" text="Cancel">
               <HBox.margin>
                  <Insets left="60.0" />
               </HBox.margin>
            </Button>
          </children>
       </HBox>
       
       <Label fx:id="statusLabel" prefHeight="21.0" prefWidth="167.0" textFill="RED" />
   </children>
</VBox>
